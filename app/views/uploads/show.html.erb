
<p>
  <strong>Title:</strong>
  <%= @upload.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @upload.description %>
</p>

<p>
  <strong>Original Name:</strong>
  <%= @upload.file_file_name %>
</p>

<p>
  <strong>File Type:</strong>
  <%= @upload.file_content_type %>
</p>

<p>
  <strong>File Size:</strong>
  <%= number_to_human_size(@upload.file_file_size) %>
</p>
<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <% if @upload.is_pdf? %>
      <embed src="<%= @upload.file.url %>" class="upload-document" />
    <% end %>
    <% if @upload.is_image? %>
      <%= image_tag @upload.file.url  %>
    <% end %>
    <% if @upload.is_vid? %>
      <%= video_tag @upload.file.url, controls: true, autobuffer: true  %>
    <% end %>
    <% if @upload.is_doc? %>
      <iframe src="https://view.officeapps.live.com/op/embed.aspx?src=<%= @upload.file.url %>" class="upload-document" frameborder='0'/>
    <% end %>
  </div>
</div>

<%= link_to 'Edit', edit_upload_path(@upload) %> |
<%= link_to 'Back', uploads_path %>
